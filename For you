<script>
  // Floating SVG hearts
  for(let i=0;i<10;i++) {
    let el = document.createElement('span');
    el.className = 'floating-heart';
    el.style.left = (5+Math.random()*90)+'vw';
    el.style.top = (30+Math.random()*60)+'vh';
    el.style.animationDelay = (Math.random()*9)+'s';
    el.innerHTML = `<svg viewBox="0 0 60 60"><path d="M30 49s-16-11.9-16-23.5S20.5 7 30 17.5 46 7 46 25.5 30 49 30 49z" fill="#ff5b87" stroke="#e44d9a" stroke-width="2"/></svg>`;
    document.body.appendChild(el);
  }
  // Floating sparkles
  for(let i=0;i<14;i++) {
    let el = document.createElement('span');
    el.className = 'sparkle';
    el.style.left = (3+Math.random()*94)+'vw';
    el.style.top = (18+Math.random()*75)+'vh';
    el.style.animationDelay = (Math.random()*7)+'s';
    document.body.appendChild(el);
  }
</script>
